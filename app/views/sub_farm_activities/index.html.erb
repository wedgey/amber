<p id="notice"><%= notice %></p>

<h1>Sub Farm Activities</h1>

<table>
  <thead>
    <tr>
      <th>Sub farm</th>
      <th>Activity</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Title</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_farm_activities.each do |sub_farm_activity| %>
      <tr>
        <td><%= sub_farm_activity.sub_farm %></td>
        <td><%= sub_farm_activity.activity %></td>
        <td><%= sub_farm_activity.amount %></td>
        <td><%= sub_farm_activity.date %></td>
        <td><%= sub_farm_activity.title %></td>
        <td><%= sub_farm_activity.note %></td>
        <td><%= link_to 'Show', sub_farm_activity %></td>
        <td><%= link_to 'Edit', edit_sub_farm_activity_path(sub_farm_activity) %></td>
        <td><%= link_to 'Destroy', sub_farm_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


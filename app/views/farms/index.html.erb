<div class="container-fluid">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#farm1" aria-controls="home" role="tab" data-toggle="tab">Farm 1</a></li>
    <li role="presentation"><a href="#farm2" aria-controls="profile" role="tab" data-toggle="tab">Farm 2</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="farm1">
      <div class="row">
        <div class="col-xs-6 col-md-5" id="farm-render-container">
          <canvas id="farmPlot"></canvas>
        </div>
        <div class="col-xs-6 col-md-5" id="notifications-container">
          <div class="panel panel-warning">
            <div class="panel-heading">Notifications</div>
            <div class="panel-body">
              <p><a href="#">High probability of Disease 0-MK!</a></p>
              <p><a href="#">Lots of raining coming in 4 days!</a></p>
            </div>
          </div>
        </div>
        <div class="col-md-2" id="actions-container">
          <button type="button" class="btn btn-default btn-lg">
            <i class="fa fa-tint" aria-hidden="true"></i> Water Farm
          </button>
          <button type="button" class="btn btn-default btn-lg">
            <i class="fa fa-medkit" aria-hidden="true"></i> Fertilize Farm
          </button>
          <button type="button" class="btn btn-default btn-lg">
            <i class="fa fa-flask" aria-hidden="true"></i> Apply Chemicals
          </button>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12" id="timeline-container">
        fsaf
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="farm2">This is profile</div>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Farm code</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Layout</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.name %></td>
        <td><%= farm.farm_code %></td>
        <td><%= farm.lat %></td>
        <td><%= farm.lng %></td>
        <td><%= farm.layout %></td>
        <td><%= farm.size %></td>
        <td><%= link_to 'Show', farm %></td>
        <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
        <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

